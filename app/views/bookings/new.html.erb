<%= form_with model: @booking, url: bookings_path, local: true do |form| %>
  <%= form.fields_for :user do |user_fields| %>
    <%= user_fields.label :first_name %>
    <%= user_fields.text_field :first_name %>

    <%= user_fields.label :last_name %>
    <%= user_fields.text_field :last_name %>
  <% end %>

  <%= form.fields_for :animal do |animal_fields| %>
    <%= animal_fields.label :name %>
    <%= animal_fields.text_field :name %>

    <%= animal_fields.label :animal_type %>
    <%= animal_fields.select :animal_type, ['Dog', 'Cat'] %>
  <% end %>

  <%= form.label :hours_requested %>
  <%= form.number_field :hours_requested, in: 2..8 %>

  <%= form.label :date_of_service %>
  <%= form.date_field :date_of_service %>

  <%= form.submit %>
<% end %>
